<div class="bottom-area mobile">


{% for text in craft.entries.section('globals') %}
{% if text.notificationHeader %}
<div class="notification-bar-mobile phone">
<div class="notification-bar-body">
  <h4>
  {{ text.notificationHeader }}
</h4>
<p>
  {{ text.notificationText }}
</p>
<div class="tock-widget">
    <div id="Tock_widget_container" data-tock-display-mode="Button" data-tock-color-mode="Blue" data-tock-locale="en-us" data-tock-timezone="America/Los_Angeles"></div>
</div>
</div>
</div>
